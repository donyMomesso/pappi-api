// ===== BUSCAR PEDIDOS CARDAPIOWEB =====
async function buscarPedidosCardapioWeb() {
  try {

    const url = `https://api.cardapioweb.com.br/merchants/${process.env.CARDAPIOWEB_STORE_ID}/orders`;

    const resp = await fetch(url, {
      method: "GET",
      headers: {
        Authorization: `Bearer ${process.env.CARDAPIOWEB_TOKEN}`,
        "Content-Type": "application/json"
      }
    });

    const data = await resp.json();

    console.log("üì¶ Pedidos CardapioWeb:", data);

  } catch (e) {
    console.log("‚ùå erro pedidos cardapioweb:", e.message);
  }
}
